{
  "json.schemaDownload.enable": true,
  // Set the default formatter for TypeScript, JavaScript, and JSON files to Prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Format the code automatically on save
  "editor.formatOnSave": true,

  // Enable ESLint as a formatter for JavaScript and TypeScript files
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  // Enable EditorConfig for this project
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "files.eol": "\n"
}
